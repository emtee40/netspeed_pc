{
  "build": {
    "beforeDevCommand": {
      "script": ""
    },
    "beforeBuildCommand": {
      "script": "npm run build:ts"
    },
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "netspeed",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "app": {
        "all": false,
        "hide": false,
        "show": false
      },
      
      "process": {
        "all": false,
        "exit": true,
        "relaunch": false,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": { 
        "all": false, 
        "setAlwaysOnTop": true,
        "startDragging": true
      }
    },
    "systemTray":{
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": false,
      "icon": [],
      "identifier": "app.visnk.netspeed",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "width":350,
        "height": 40,
        "title": "Netspeed",
        "decorations":false,
        "alwaysOnTop": true
      
      }
    ]
  }
}
